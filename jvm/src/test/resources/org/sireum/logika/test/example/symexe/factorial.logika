import org.sireum.logika._

l"""{ fact
        def f(n: Z): Z
        base. f(0) == 1
        rec.  all x: Z
                x > 0 -> f(x) == f(x-1) * x         }"""
def factorial(n: Z): Z = {

  l"""{ requires  n >= 0
        ensures   result == f(n)                    }"""

  var i: Z = 0
  var r: Z = 1
  while (i != n) {

    l"""{ invariant  r == f(i)
                     i >= 0
          modifies i, r                             }"""

    i = i + 1
    r = r * i
  }

  return r
}