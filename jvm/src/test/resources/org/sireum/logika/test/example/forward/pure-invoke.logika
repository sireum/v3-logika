import org.sireum.logika._

def inc(x : Z): Z = {
  l"""{ ensures result == x + 1 }"""

  l"""{ 1. x + 1 == x + 1 algebra }"""
  return x + 1
}

def foo(y: Z): Z = {
  l"""{ ensures result == inc(inc(y)) }"""

  l"""{ 1. ∀x : Z  inc(x) == x + 1      fact inc
        2. inc(y) == y + 1              ∀e 1 y
        3. inc(inc(y)) == inc(y) + 1    ∀e 1 inc(y)
        4. y + 2 == inc(inc(y))         algebra 2 3
  }"""
  return y + 2
}
