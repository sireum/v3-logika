main(comment, filename, io, assertion, assumption, globals, protos, stmts, methods, hasTopLevel, hasPrototypes, hasGlobals, hasRandom) ::= <<
$if(comment)$
$comment; separator="\n"$

$endif$
$if(io || hasRandom)$
#include <logika-io.h>
$else$
#include <logika.h>
$endif$
$if(hasTopLevel && hasRandom)$
#include <sodium.h>
$elseif(hasRandom)$
// Need to call sodium_init in the main program
$endif$
$if(assertion || assumption || (hasTopLevel && hasRandom))$
#include <assert.h>

$if(assumption)$
#define assume(e) assert(e)
$endif$
$endif$


$if(hasPrototypes)$
// Prototypes
$protos; separator="\n\n"$

$endif$

$if(hasGlobals)$
// Global Variables
$globals; separator="\n\n"$

$endif$

$if(hasTopLevel)$
// Top-Level Statements
void run()
{
  $if(hasRandom)$
  L_assert(sodium_init() != -1);
  $endif$

  $stmts; separator="\n\n"$
}

$endif$

$if(hasPrototypes)$
// Implementations
$methods; separator="\n\n"$

$endif$

$if(hasTopLevel)$
int main()
{
  run();
  return 0;
}
$endif$
>>

globals(comment, global) ::= <<
$if(comment && global)$
$comment; separator="\n"$
$endif$
$global; separator="\n"$
>>

global(t, x, no) ::= <<
$t$ $x$;$if(no)$ // L$no$$endif$
>>

stmts(comment, stmt) ::= <<
$if(comment && stmt)$
$comment; separator="\n"$
$endif$
$stmt; separator="\n"$
>>

methods(comment, method) ::= <<
$if(comment && method)$
$comment; separator="\n"$

$endif$
$method; separator="\n\n"$
>>

mainH(comment, protos, hasPrototypes) ::= <<
$if(comment)$
$comment; separator="\n"$

$endif$
#include <logika.h>

$if(hasPrototypes)$
$protos; separator="\n\n"$
$endif$
>>

lcomment(text) ::= <<
// $text$
>>

protos(proto, comment) ::= <<
$if(comment && proto)$
$comment; separator="\n"$

$endif$
$proto; separator="\n\n"$
>>

method(proto, stmts) ::= <<
$proto$
{
  $stmts$
}
>>

proto(no, t, name, param, end) ::= <<
$t$ $name$($if(param)$$param; separator=", "$$else$void$endif$)$end$$if(no)$ // L$no$$endif$
>>

param(mod, t, x) ::= <<
$if(!mod)$const $endif$$t$ $x$
>>

line(no) ::= <<
$if(no)$ // L$no$$endif$
>>

assignStmt(no, t, x, e) ::= <<
$if(t)$$t$ $endif$$x$ = $e$;$line(no)$
>>

assignRefStmt(no, t, x, e) ::= <<
{$line(no)$
  $t$ L_temp = $e$;
  L_wipe_$t$(&$x$);
  $x$ = L_temp;
}
>>

seqAssignStmt(no, x, i, e) ::= <<
$x$.data[$i$] = $e$;$line(no)$
>>

assertStmt(no, e) ::= <<
assert($e$);$line(no)$
>>

assumeStmt(no, e) ::= <<
assume($e$);$line(no)$
>>

ifStmt(no, e, tStmts, fStmts) ::= <<
if ($e$) {$line(no)$
  $tStmts$
}$if(fStmts)$ else {
  $fStmts$
}
$endif$
>>

whileStmt(no, e, stmts) ::= <<
while ($e$) {$line(no)$
  $stmts$
}
>>

printStmt(no, stmt) ::= <<
{$line(no)$
  $stmt; separator="\n"$
}
>>

returnStmt(no, e) ::= <<
return $e$;$line(no)$
>>

lit(e) ::= <<
$e$
>>

litCastExp(t, e, text) ::= <<
(($t$) $e$$if(text)$ /* $text$ */$endif$)
>>

lit64Exp(signed, t, e1, e2, text) ::= <<
$if(signed)$
(($t$) ($e1$LL << 32 | $e2$LL) /* $text$ */)
$else$
(($t$) ($e1$ULL << 32 | $e2$ULL) /* $text$ */)
$endif$
>>

sizeExp(e) ::= <<
L_Zsize_t($e$.size)
>>

cloneExp(t, e) ::= <<
L_clone_$t$($e$)
>>

randomExp(t) ::= <<
L_random_$t$()
>>

unExp(op, e, paren) ::= <<
$if(paren)$($endif$$op$ $e$$if(paren)$)$endif$
>>

binExp(e1, op, e2, paren) ::= <<
$if(paren)$($endif$$e1$ $op$ $e2$$if(paren)$)$endif$
>>

callExp(no, id, e, end) ::= <<
$id$($e; separator=", "$)$end$$line(no)$
>>

indexExp(e, i) ::= <<
$e$.data[$i$]
>>

createExp(t, size, initValue) ::= <<
L_create_$t$($size$, $initValue$)
>>